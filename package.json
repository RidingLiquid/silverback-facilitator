{
  "name": "@silverback/x402-facilitator",
  "version": "2.0.0",
  "description": "Silverback x402 Payment Facilitator - SDK-based, Base USDC + Solana USDC",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:@solana/kit --external:@solana/web3.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@solana/kit": "^2.1.0",
    "@x402/core": "^2.3.0",
    "@x402/evm": "^2.3.0",
    "@x402/extensions": "^2.3.1",
    "@x402/svm": "^2.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.20.0",
    "express": "^4.21.0",
    "viem": "^2.25.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
